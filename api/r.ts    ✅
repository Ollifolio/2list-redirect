import { NextRequest, NextResponse } from 'next/server';

// Diese Funktion reagiert auf Aufrufe wie /api/r?u=https://www.zalando.de
export async function GET(request: NextRequest) {
  const { searchParams } = new URL(request.url);
  const targetUrl = searchParams.get('u');

  if (!targetUrl) {
    return NextResponse.json(
      { error: 'Missing parameter: u (target URL)' },
      { status: 400 }
    );
  }

  // Optional: Konsolen-Log für Debug (Vercel Dashboard → Logs)
  console.log(`Redirecting to: ${targetUrl}`);

  // 302 = temporäre Weiterleitung
  return NextResponse.redirect(targetUrl, 302);
}
